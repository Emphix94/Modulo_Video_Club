<?xml version="1.0" encoding="utf-8"?>
<odoo>
  
   
    <record id='movie.action' model='ir.actions.act_window'>
        <field name="name">película</field>
        <field name="res_model">models.movie</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id='employees.action' model='ir.actions.act_window'>
        <field name="name">empleados</field>
        <field name="res_model">video_club.VideoClubEmployees</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id='client.action' model='ir.actions.act_window'>
        <field name="name">clientes</field>
        <field name="res_model">video_club.VideoClubClient</field>
        <field name="view_mode">tree,form</field>
    </record>





    <menuitem name="VideoClub" id="video_club_base_menu" />
    <menuitem name="Películas" id="movies_menu" parent="video_club_base_menu" action="movie.action"/>
    <menuitem name="Empleados" id="employees_menu" parent="video_club_base_menu" action="employees.action"/>
    <menuitem name="Clientes" id="clients_menu" parent="video_club_base_menu" action="client.action"/>

    <!-- Form View -->
    <record id="movie_form" model="ir.ui.view">
        <field name="name">Movie Form</field>
        <field name="model">models</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="make_available" string="Make Available" type="object"/>
                    <button name="make_borrowed"  string="Make Borrowed" type="object"/>
                    <button name="make_lost"  string="Make Lost" type="object"/>
                    <button name="log_all_library_members"  string="Log Members" type="object"/>
                    <button name="create_categories" string="Create Categories" type="object"/>
                    <button name="change_release_date" string="Update Date" type="object"/>
                    <button name="find_book" string="Find Book" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <group>
                    <group>
                        <field name="title"/>
                        <field name="genre" widget="many2many_tags"/>
                        <field name="sinopsys" />
                        <field name="director"/>
                    </group>
                    <group>
                        <field name="cover"/>
                        <field name="releaseDate"/>
                        <field name="state"/>
                        
                    </group>
                </group>
            </form>
        </field>
    </record>



    <record id="movie_form" model="ir.ui.view">
        <field name="name">employees.form</field>
        <field name="model">video_club.VideoClubEmployees</field>
        <field name="arch" type="xml">
            <form>
                
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="date_start"/>
                        <field name="date_end" />
                        <field name="employee_number"/>
                    </group>
                    <group>
                       
                        <field name="date_of_birth"/>
                        
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="movie_form" model="ir.ui.view">
        <field name="name">employees.form</field>
        <field name="model">video_club.VideoClubClient</field>
        <field name="arch" type="xml">
            <form>
                
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="date_start"/>
                        <field name="date_end" />
                        <field name="client_number"/>
                    </group>
                    <group>
                        
                        <field name="date_of_birth"/>
                        
                    </group>
                </group>
            </form>
        </field>
    </record>






    <!-- Tree(list) View -->
    <record id="movie_tree" model="ir.ui.view">
        <field name="name">movieList</field>
        <field name="model">videoClub.movie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>
            </tree>
        </field>
    </record>

    <record id="employees_tree" model="ir.ui.view">
        <field name="name">EmployeesList</field>
        <field name="model">videoClub.video_club.VideoClubEmployees</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_number"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="movie_search" model="ir.ui.view">
        <field name="name">movie Search</field>
        <field name="model">video_club.movie</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter string="Without director" name="without_director" domain="[('director','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>